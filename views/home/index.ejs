  <body style="width:100%;    background-color: #F6F8FA;" >

      <%- include('./../partials/header',{user: user}) %>

    <div class="" style="width:100%;font-size:14px" >
      <div class="row" style="width:100%">

        <div class="col-lg-2 col-xl-2 d-none d-lg-block" style="padding-left: 0px;border-right:1px solid #e1e4e8!important;padding-right:0px">
          <div class="leftpane" >


          </div>
        </div>

        <div class="col-lg-8 col-xl-8 col- middlepane col-md-8 col-xs-8">
          <div style="background-color:white;padding: 25px 15px 15px 15px;border-radius: 15px;border:1px solid #e1e4e8!important">
            <form id="rendered-form" style="width:95%;margin: 0 auto" action="/createpost" method="post">
              <div class="rendered-form">
                <div class="fb-text form-group" style="width:70%">
                  <input type="text" class="form-control" name="post_title" id="text-1548844752865" placeholder="title">
                </div>
                <div class="fb-textarea form-group ">
                  <textarea type="textarea" class="form-control" name="post_body" id="textarea-1548844754498" placeholder="post content"></textarea>
                </div>
                <input type="submit" value="Create Post" onclick="msg()" class="btn" style="background-color: #24292E;color:white">
              </div>
            </form>
          </div>

          <div id="userPostsList" style="">

          </div>
          
        </div>

        <div class="col-lg-2 col-xl-2 rightpane col-md-4 col-xs-4">
          <div >

            <div class="text-bold f5">
              Friends ( <%= friends_row.length %> )
            </div>

            <div>
              <% for(var i=0;i<friends_row.length;i++){ %>
                <% var friend = friends_row[i].myfriend %>
                <!-- <div><%= friend.username +"   "+friend.email +"   "+friend.id %></div> -->
                <div>
                  <a href="<%= '/chat/' + friend.username %>"><%= friend.username %></a>  
                </div>
              <% } %>
            </div>
            
          </div>
          
        </div>

      </div>
    </div>
    
    

    <script src="/socket.io/socket.io.js"></script>
    <script src="/static/js/index.js"></script>
    <script src="/static/js/home_posts.js"></script>
    <script src="http://localhost:3000/socket.io/socket.io.js"></script>
